@model EasySystemAPI.Models.SkillType
@{
    ViewData["Title"] = "EditSkillType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <div class="panel-content">
        <div class="main-title-sec">
            <div class="row">
                <div class="col-md-12 column">
                    <div class="heading-profile">
                        <h2>Update Skill Type</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="main-content-area">
            <div class="row">
                <div class="col-md-12">


                    <div class="row">
                        <div class="widget white with-padding">
                            <div id="Notifocation">

                                @if (TempData["Info"] != null)
                                {
                                    <div role="alert" class="alert alert-info">
                                        <strong><i class="fa fa-info-circle"></i></strong>
                                        @TempData["Info"].
                                    </div>
                                }
                                @if (TempData["Success"] != null)
                                {
                                    <div role="alert" class="alert alert-success">
                                        <strong><i class="fa fa-thumbs-o-up"></i></strong>
                                        @TempData["Success"].
                                    </div>
                                }
                                @if (TempData["Error"] != null)
                                {
                                    <div role="alert" class="alert alert-danger">
                                        <strong><i class="fa fa-thumbs-o-down"></i></strong>
                                        @TempData["Error"].
                                    </div>
                                }

                            </div>
                            <form asp-action="EditSkillType" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="exampleInputEmail2">Main Type</label>
                                            @Html.DropDownList("SubType", (SelectList)ViewData["Skills"], "Main Type", new { @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="exampleInputEmail2">Skill Type</label>
                                            <input type="text" class="form-control" asp-for="StName" required />
                                            <input asp-for="StId" hidden class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="exampleInputEmail2">Select Status</label>
                                            @{
                                                var list = new List<SelectListItem>();
                                                list.Add(new SelectListItem { Text = "Approved", Value = "true" });
                                                list.Add(new SelectListItem { Text = "DisApproved", Value = "false" });

                                            }
                                            <select asp-for="StStatus" class="form-control" asp-items="@list" required></select>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="exampleInputEmail2">Select Category</label>
                                            @{
                                                var list1 = new List<SelectListItem>();
                                                list1.Add(new SelectListItem { Text = "Free", Value = "Free" });
                                                list1.Add(new SelectListItem { Text = "Paid", Value = "Paid" });

                                            }
                                            <select asp-for="StCategory" class="form-control" asp-items="@list1" required></select>
                                        </div>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="exampleInputEmail2">Skill Type Detail</label>
                                            <textarea id="w3mission" asp-for="StDetail" rows="9" placeholder="Enter SKill Detail" class="form-control"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="exampleInputEmail2">Skill Type Image</label>
                                            <input type="file" name="Image" class="form-control" asp-for="StImage" />
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label for="exampleInputEmail2">Choose Cover Image</label>
                                            <input type="file" name="cImage" class="form-control" asp-for="StCoverImage" />
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-info" style="background-color:#1b3767">Update</button>
                                <a asp-controller="Admin" asp-action="SkillType" class="btn btn-info" style="background-color:#1b3767">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Panel Content -->
</div>


<script src="~/js/tinymce/tinymce.min.js"></script>
