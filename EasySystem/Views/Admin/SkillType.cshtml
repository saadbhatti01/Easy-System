<script>
    $("#btnSearch").click(function () {
        GetData();
    });
</script>



<script>
    function GetData() {
        $('.progress-bar').show();
     var id = $("#id").val();
     if (id != "") {
         $("#btnSearch").html('<i class="fa fa-spinner fa-spin"></i>  Working...');
         $('#btnSearch').attr('disabled', true);

             $.ajax(
                 {
                    url: "@Url.Action("_SkillTypeData", "Admin")",
                    data: { Id: id },
                    type: "Get",
                    dataType: "html",
                    async: "true",
                     cache: "false",
                     beforeSend: function () {
                         //$('.my-box').html('<div class="progress"><div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div></div>');
                         $('.progress-bar').animate({ width: "30%" }, 100);
                     },
                    success: function (data) {
                        //Whatever result you have got from your controller with html partial view replace with a specific html.
                        // HTML DOM replace
                        if (data !== "") {
                            $('.progress-bar').animate({ width: "100%" }, 100);
                            setTimeout(function () {
                                $('.progress-bar').css({ width: "100%" });
                                setTimeout(function () {
                                    $("#Data").html(data);
                                    $("#btnSearch").html('Search');
                                    $('#btnSearch').attr('disabled', false);
                                    //$('.my-box').html(data);
                                    $('.progress-bar').hide();
                                    $('.progress-bar').css({ width: "0%" });
                                }, 100);
                            }, 500);

                        } else {
                            $("#btnSearch").html('<i class="fa fa-flag-checkered"></i>  No Record found');
                            $('#btnSearch').attr('disabled', false);
                            $(".progress-bar").hide();
                            $('.progress-bar').animate({ width: "100%" }, 100);
                            setTimeout(function () {
                                $('.progress-bar').css({ width: "100%" });
                                setTimeout(function () {
                                    $('.progress-bar').hide();
                                }, 100);
                            }, 500);

                        }
                    },

                    Error: function () {
                        alert("Some error");
                    }
                });
     }
     else {
         alert("Please select Skill Type");
     }

        }
</script>