@model  EasySystemAPI.Models.UserVerificationType
@{
    ViewData["Title"] = "User Verification Type";
    ViewBag.Title2 = "Enhance skills in you and make your life better. Join for Free.";
    ViewBag.Image = "~/images/logo.png";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="main-content">
        <div class="panel-content">
            <div class="main-title-sec">
                <div class="row">
                    <div class="col-md-12 column">
                        <div class="heading-profile">
                            <h2>Verification Type</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main-content-area">
                <div class="row">
                    <div class="col-md-12">


                        <div class="row">
                            <div class="widget white with-padding">
                                <div id="Notifocation">

                                    @if (TempData["Info"] != null)
                                    {
                                        <div role="alert" class="alert alert-info">
                                            <strong><i class="fa fa-info-circle"></i></strong>
                                            @TempData["Info"].
                                        </div>
                                    }
                                    @if (TempData["Success"] != null)
                                    {
                                        <div role="alert" class="alert alert-success">
                                            <strong><i class="fa fa-thumbs-o-up"></i></strong>
                                            @TempData["Success"].
                                        </div>
                                    }
                                    @if (TempData["Error"] != null)
                                    {
                                        <div role="alert" class="alert alert-danger">
                                            <strong><i class="fa fa-thumbs-o-down"></i></strong>
                                            @TempData["Error"].
                                        </div>
                                    }

                                </div>
                                <form asp-action="UserVerificationType" method="post">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="exampleInputEmail2">Type Name</label>
                                                <input type="text" class="form-control" asp-for="uvtName" required />

                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="exampleInputEmail2">Type Text</label>
                                                <input type="text" class="form-control" asp-for="uvtText"  />

                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="exampleInputEmail2">Select Status</label>
                                                @{
                                                    var list = new List<SelectListItem>();
                                                    list.Add(new SelectListItem { Text = "Active", Value = "true" });
                                                    list.Add(new SelectListItem { Text = "DeActive", Value = "false" });

                                                }
                                                <select asp-for="uvtStatus" class="form-control" asp-items="@list" required></select>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-info" style="background-color:#1b3767">Submit</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    @if (TempData["List"] != null)
                    {
                        <div class="col-md-12">
                            <div class="row">
                                <div class="widget white">
                                    <div class="form-group" hidden>
                                        &nbsp;
                                        <div class="col-md-3">
                                            <input type="text" id="Input" onkeyup="myFunction()" placeholder="Search for.... " class="form-control" title="Type in a name">

                                        </div>
                                    </div>


                                    <table id="List" class="table-striped table-responsive-md footable table" data-page-size="5" data-filter=#filter>
                                        <thead>
                                            <tr>

                                                <th>Verification Type Name</th>
                                                <th>Verification Type Text</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var i in (List<EasySystemAPI.Models.UserVerificationType>)TempData["List"])
                                            {
                                                <tr>

                                                    <td>@i.uvtName</td>
                                                    <td>@i.uvtText</td>
                                                    <td>@i.uvtStatus</td>
                                                    <td>
                                                        <a asp-controller="Admin" asp-action="DeleteUserVerificationType" asp-route-id="@i.uvtId" title="Delete Record" style="color:red"><i class="fa fa-trash-o"></i></a>
                                                        &nbsp;
                                                        <a asp-controller="Admin" asp-action="EditUserVerificationType" asp-route-id="@i.uvtId" title="Update Record"><i class="fa fa-edit"></i></a>
                                                    </td>
                                                </tr>
                                            }


                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="9">
                                                    <ul class="pagination pull-right"></ul>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Panel Content -->
    </div>
