
@{
    ViewData["Title"] = "Coupons";
    ViewBag.Title2 = "Enhance skills in you and make your life better. Join for Free.";
    ViewBag.Image = "~/images/logo.png";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int SrNo = 1;
}

<div class="main-content">
    <div class="panel-content">
        <div class="main-title-sec">
            <div class="row">
                <div class="col-md-12 column">
                    <div class="heading-profile">
                        <h2>My Coupons</h2>



                    </div>
                </div>
            </div>
        </div>
       <br />
        <div class="main-content-area">
            <div class="row">
                <div class="col-md-12">

                    <div class="row">

                        <div class="widget white with-padding">



                            <div id="Notifocation">

                                @if (TempData["Info"] != null)
                                {
                                    <div role="alert" class="alert alert-info">
                                        <strong><i class="fa fa-info-circle"></i></strong>
                                        @TempData["Info"].
                                    </div>
                                }
                                @if (TempData["Success"] != null)
                                {
                                    <div role="alert" class="alert alert-success">
                                        <strong><i class="fa fa-thumbs-o-up"></i></strong>
                                        @TempData["Success"].
                                    </div>
                                }
                                @if (TempData["Error"] != null)
                                {
                                    <div role="alert" class="alert alert-danger">
                                        <strong><i class="fa fa-thumbs-o-down"></i></strong>
                                        @TempData["Error"].
                                    </div>
                                }

                            </div>


                            <div role="alert" class="alert white">
                                <span><i class="ti-info-alt blue-bg"></i></span>
                                When you will have one hundred trainees then you will get Coupons from us. So please keep increasing your number of trainees and get Coupons. Never give up !!
                            </div>
                           

                            @if (TempData["MyCoupan"] != null)
                            {
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="widget white">
                                            <div class="form-group" hidden>
                                                &nbsp;
                                                <div class="col-md-3">
                                                    <input type="text" id="Input" onkeyup="myFunction()" placeholder="Search for.... " class="form-control" title="Type in a name">

                                                </div>
                                            </div>
                                            <table id="List" class="table-striped table-responsive-md footable table" data-page-size="5" data-filter=#filter>
                                                <thead>
                                                    <tr>

                                                        <th>SrNo</th>
                                                        <th>Coupon Code</th>
                                                        <th>Amount</th>
                                                        <th>Status</th>
                                                        <th>Expiry Date</th>
                                                        <th>Used By</th>
                                                        <th>Used Date</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var i in (List<EasySystem.Models.CoupanVM>)TempData["MyCoupan"])
                                                    {
                                                        <tr>
                                                            <td>@SrNo</td>
                                                            <td>@i.cCode</td>
                                                            <td>@i.cAmount</td>
                                                            <td>@i.cStatus</td>
                                                            <td>@i.cExpiryDate.ToString("dd-MMM-yyyy")</td>

                                                            <td>@i.UsedUser</td>
                                                            <td>
                                                                @if (i.cUsedDate.Year < 2000)
                                                                {

                                                                }
                                                                else
                                                                {
                                                                    @i.cUsedDate.ToString("dd-MMM-yyyy")
                                                                }
                                                            </td>

                                                        </tr>
                                                        SrNo = SrNo + 1;
                                                    }


                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <td colspan="9">
                                                            <ul class="pagination pull-right"></ul>
                                                        </td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            }

                        </div>
                    </div>
                        
                    </div>

              
            </div>
        </div>
    </div>
    <!-- Panel Content -->
</div>

