
@{
    ViewData["Title"] = "Skills";
    ViewBag.Title2 = "Enhance skills in you and make your life better. Join for Free.";
    ViewBag.Image = "~/images/logo.png";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="panel-content">
        <div class="main-title-sec">
            <div class="row">
                <div class="col-md-3 column">
                    <div class="heading-profile">
                        <h2>Skills</h2>

                    </div>
                </div>
            </div>
        </div>
        <div class="main-content-area">
            <div class="row">
                @if (TempData["UserSkills"] != null)
                {
                    <div class="col-md-12">
                        <div class="row">
                            <div class="widget white">
                                <div id="Notifocation">

                                    @if (TempData["Info"] != null)
                                    {
                                        <div role="alert" class="alert alert-info">
                                            <strong><i class="fa fa-info-circle"></i></strong>
                                            @TempData["Info"].
                                        </div>
                                    }
                                    @if (TempData["Success"] != null)
                                    {
                                        <div role="alert" class="alert alert-success">
                                            <strong><i class="fa fa-thumbs-o-up"></i></strong>
                                            @TempData["Success"].
                                        </div>
                                    }
                                    @if (TempData["Error"] != null)
                                    {
                                        <div role="alert" class="alert alert-danger">
                                            <strong><i class="fa fa-thumbs-o-down"></i></strong>
                                            @TempData["Error"].
                                        </div>
                                    }

                                </div>
                                <div class="form-group" hidden>
                                    &nbsp;
                                    <div class="col-md-3">
                                        <input type="text" id="Input" onkeyup="myFunction()" placeholder="Search for.... " class="form-control" title="Type in a name">

                                    </div>
                                </div>
                                <table id="List" class="table-striped table-responsive-md footable table" data-page-size="5" data-filter=#filter>
                                    <thead>
                                        <tr>

                                            <th>Skill Name</th>
                                            <th>Type</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var i in (List<EasySystem.Models.UserSkillVM>)TempData["UserSkills"])
                                        {
                                            <tr>

                                                <td>
                                                    <a asp-controller="My" asp-action="SkillDetail" asp-route-id="@i.usId" asp-route-Page="UserSkills" title="Record Detail" style="color:black"> @i.StName</a>
                                                </td>
                                                @if (i.usLevel == 0)
                                                {
                                                    <td>Free</td>
                                                }
                                                else if (i.usLevel == 1)
                                                {
                                                    <td>Paid</td>
                                                }
                                                <td>
                                                    <a asp-controller="My" asp-action="SkillDetail" asp-route-id="@i.usId" asp-route-Page="UserSkills" title="Record Detail"><i class="fa fa-info-circle"></i></a>
                                                </td>
                                            </tr>

                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="9">
                                                <ul class="pagination pull-right"></ul>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
    <!-- Panel Content -->
</div>

