@model EasySystemAPI.Models.ChangePassword
@{
    ViewData["Title"] = "Change_Password";
    ViewBag.Title2 = "Enhance skills in you and make your life better. Join for Free.";
    ViewBag.Image = "~/images/logo.png";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="main-content">
        <div class="panel-content">
            <div class="main-title-sec">
                <div class="row">
                    <div class="col-md-3 column">
                        <div class="heading-profile">
                            <h2>Change Password</h2>
                           
                        </div>
                    </div>

                </div>
            </div>

            <div class="main-content-area">
                <div class="row">
                    <div class="col-md-12">
                        <div class="widget white with-padding">
                            <div id="Notifocation">

                                @if (TempData["Info"] != null)
                                {
                                    <div role="alert" class="alert alert-info">
                                        <strong><i class="fa fa-info-circle"></i></strong>
                                        @TempData["Info"].
                                    </div>
                                }
                                @if (TempData["Success"] != null)
                                {
                                    <div role="alert" class="alert alert-success">
                                        <strong><i class="fa fa-thumbs-o-up"></i></strong>
                                        @TempData["Success"].
                                    </div>
                                }
                                @if (TempData["Error"] != null)
                                {
                                    <div role="alert" class="alert alert-danger">
                                        <strong><i class="fa fa-thumbs-o-down"></i></strong>
                                        @TempData["Error"].
                                    </div>
                                }

                            </div>
                            <form method="post">
                                <div class="col-md-3 form-group">
                                    <label for="">Current Password</label>
                                    <input type="password" asp-for="cPassword" class="form-control" required>
                                </div><!-- /.form-group -->
                                <div class="col-md-3 form-group">
                                    <label for="">New Password</label>
                                    <input type="password" name="nPassword" asp-for="nPassword" required class="form-control">
                                </div><!-- /.form-group -->
                                <div class="col-md-3 form-group">
                                    <label for="">Retype Password</label>
                                    <input type="password" name="rPassword" asp-for="rPassword" required class="form-control">
                                </div><!-- /.form-group -->

                                <div class="col-md-4 form-group ">
                                    <button type="submit" class="btn btn-info" style="background-color:#1b3767">Change Password</button>
                                </div><!-- /.form-group-btn -->



                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Panel Content -->
    </div>

