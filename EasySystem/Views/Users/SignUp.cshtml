@model EasySystem.Models.UserSignUpCode
@{
    ViewData["Title"] = "SignUp";
    ViewBag.Title2 = "Enhance skills in you and make your life better. Join for Free.";
    ViewBag.Image = "~/images/logo.png";
    Layout = "~/Views/Shared/_InitialLayout.cshtml";
    if (TempData["MentorCode"] != null)
    {
        TempData.Keep("MentorCode");
    }
}

<div class="acount-sec">
    <div class="container">
        <div class="row">
            <div class="col-md-3">

            </div>
            <div class="col-md-8">
                @if (TempData["Info"] != null)
                {
                    <div role="alert" class="alert alert-info">
                        <strong><i class="fa fa-info-circle"></i></strong>
                        @TempData["Info"]
                    </div>
                }
                @if (TempData["Warning"] != null)
                {
                    <div role="alert" class="alert alert-warning">
                        <strong><i class="fa fa-warning"></i></strong>
                        @TempData["Warning"] 'OR' For getting password please <a class="alert-link" href="~/Users/Forget_Password">Click here.</a>
                    </div>
                }
                @if (TempData["Success"] != null)
                {
                    <div role="alert" class="alert alert-success">
                        <strong><i class="fa fa-thumbs-o-up"></i></strong>
                        @TempData["Success"].
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div role="alert" class="alert alert-danger">
                        <strong><i class="fa fa-thumbs-o-down"></i></strong>
                        @TempData["Error"].
                    </div>
                }
                <div class="contact-sec">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="widget-title">
                                <h3>Sign Up</h3>
                                <span>Fill your detail to get in</span>
                            </div>
                            <!-- Widget title -->
                            <div class="account-form">
                                <form asp-action="SignUp" id="form">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="row">
                                        <div class="input-group">
                                            @*@Html.DropDownList("CountryCode", (SelectList)ViewData["Country"], new { required = "required", @Name = "cCode" })*@
                                            <select asp-items="(SelectList)@ViewData["Country"]" name="cCode" style="width:100px !important; margin-right:5px !important; color:gray; border-color:darkgray;" required></select>
                                            <input type="number" asp-for="usPhone" class="form-control" placeholder="Phone Number" required />
                                        </div>

                                        <div class="feild col-md-6">
                                            @if (TempData["MentorCode"] != null)
                                            {
                                                <input type="hidden" name="code" value="@TempData["MentorCode"]" />
                                            }
                                        </div>
                                        <div class="feild col-md-12">
                                            <div class="checkbox pull-left">
                                                <label>
                                                    <input type="checkbox" value="" style="tab-size:8px" required>
                                                    I have Read Terms &amp; Conditions
                                                </label>
                                            </div>

                                        </div>
                                        <div class="feild col-md-12">
                                            <button type="submit" value="Submit" id="btnSubmit" >Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="more-option"> <span>OR</span> </div>

                        </div>
                        <div class="col-md-6">
                            <div class="creat-an-account">
                                <span>Already have an account?</span> <a asp-controller="Users" asp-action="Login" title="Go to Login Page">Log In</a>
                            </div>
                            <!-- Create an account -->
                        </div>
                    </div>
                </div>

            </div>


        </div>
    </div>
</div>

<script src="~/js/jquery-3.3.1.min.js"></script>

<script>
    $(document).ready(function () {
        $('form').submit(function () {
            var formId = this.id;
            if (formId != '') {
                $('#btnSubmit').attr('disabled', true);
                $("#btnSubmit").html('<i class="fa fa-spinner fa-spin"></i> Working...');
                this.submit();
            }
        });
    });
</script>