@{
    ViewData["Title"] = "Helping_Material";
    ViewBag.Title2 = "Enhance skills in you and make your life better. Join for Free.";
    ViewBag.Image = "~/images/logo.png";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="container" margin-bottom:20px">
    <div class="row">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Oh snap! @TempData["Error"].
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible" role="alert" style="margin-bottom:0;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                Success! @TempData["Success"].
            </div>
        }
        <div class="col-md-12">
            <h2>User Helping Material</h2>
            <div class="col-md-12">

                @if (TempData["List"] != null)
                {
                    <div class="row">
                        <h4>Videos</h4>
                        @foreach (var i in (List<EasySystem.Models.UserHelpingMaterial>
                      )TempData["List"])
                        {
                            @if (i.umsType == "video" && i.umsFor == "Company")
                            {
                                <div class="col-md-4 animate-box">

                                    <iframe src="@i.umsPath" frameborder="0" height="250" allow="accelerometer; autoplay;  encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                    <p>
                                        @i.umsTitle
                                    </p>

                                </div>
                            }

                        }
                    </div>

                    <div class="row">
                        <h4>Images</h4>
                        @foreach (var i in (List<EasySystem.Models.UserHelpingMaterial>
                   )TempData["List"])
                        {
                            @if (i.umsType == "image" && i.umsFor == "Company")
                            {
                                <div class="col-md-4 animate-box">

                                    <img src="~/images/UserMarketingMaterial/company/@i.umsPath" height="250" width="300" alt="@i.umsTitle">
                                    <p>
                                        @i.umsTitle
                                    </p>

                                </div>
                            }

                        }
                    </div>
                }



            </div>

        </div>

    </div>
</div>

