<script>
    $(function () {
        $("#GetQuestion").click(function () {
            $.ajax({
                    url: "@Url.Action("CheckSession", "Courses")",
                    type: "json",
                    async: "true",
                    cache: "false",
                    success: function (res) {
                        if (res.Success === "true") {
                            var id = $("#StId").val();
                            if (id != "") {
                                window.location = '/My/CertificationTest/' + id + '';
                            }

                        } else {
                            swal({
                                title: "Failed!",
                                text: "Please login to continue",
                                type: "error",
                            });
                        }

                    },
                });
        });
    });
</script>


