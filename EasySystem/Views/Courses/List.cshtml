<script>
 function GetData() {
     var count = $("#Val").val();
     var sId = $("#Id").val();
     //$("#more").html('<i class="fa fa-spinner fa-spin"></i>Loading...');
     //$('#more').attr('disabled', true);
     $('#loading').show();
     $('#btnMore').hide();
            $.ajax({
                    url: "@Url.Action("_SkillsList", "Courses")",
                    data: { Value: count, Id: sId },
                    type: "Get",
                    dataType: "html",
                    async: "true",
                    cache: "false",
                    success: function (data) {
                        //Whatever result you have got from your controller with html partial view replace with a specific html.
                        // HTML DOM replace
                        if (data !== "") {
                            var newC = 12;
                            var newCount = parseInt(newC) + parseInt(count);
                            $("#Val").val(newCount);
                            $("#Data").append(data);
                            $('#loading').hide();
                            $('#btnMore').show();
                            $("#more").html('Load More');
                            $('#more').attr('disabled', false);
                        } else {
                            if (count == 0) {
                                $('#loading').hide();
                                $('#btnMore').hide();
                                $("#more").html('No record found');
                                $('#more').attr('disabled', true);
                            } else {
                                $('#loading').hide();
                                $('#btnMore').show();
                                $("#more").html('No more record found');
                                $('#more').attr('disabled', true);
                            }

                        }
                    },

                    Error: function () {
                        alert("Some error");
                    }
                });
        }
</script>

