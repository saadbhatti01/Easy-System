@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var ID = @HttpContextAccessor.HttpContext.Session.GetInt32("ID");
}

<!DOCTYPE html>
<html>
<head>
