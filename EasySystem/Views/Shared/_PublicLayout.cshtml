                        <ul class="colorlib-footer-links">
                            <li>@Html.ActionLink("Blogs", "Index", "Blogs")</li>
                            <li><a href="~/Home/Terms">Terms </a></li>
                            <li><a href="~/Home/RefundPolicy">Refund Policy</a></li>
                            <li><a href="~/Home/PrivacyPolicy">Privacy Policy</a></li>
                            <li><a href="~/Verify/">Certificate Verification</a></li>
                        </ul>
                    </p>
                    @*<h4>Socials</h4>
                        <p>
                            <ul class="colorlib-footer-links">
                                <li><a href="https://www.facebook.com/LESkillsOfficial/"><i class="icon-facebook"></i> Facebook </a></li>
                                <li><a href="https://www.youtube.com/channel/UCfbH8aW1Q_X8GMZKTuG1biA"><i class="icon-youtube"> </i> YouTube</a></li>
                                <li><a href="https://www.instagram.com/LESkillsOfficial/"><i class="icon-instagram"></i> Instagram</a></li>
                            </ul>
                        </p>*@
                </div>

                <div class="col-md-3 colorlib-widget">
                    <h4>Contact Info</h4>
                    <ul class="colorlib-footer-links">
                        <li>
                            <i class="icon-location4"></i> UNIVERSAL SKILLS LTD
                            <br />2 Frederick Street,
                            London <br />
                            WC1X 0ND
                        </li>
                        <li>
                            <i class="icon-location4"></i> Lahore, Pakistan

                        </li>
                        <li><a href="mailto:info@universalSkills.co"><i class="icon-envelop"></i> info@universalSkills.co</a></li>
                        <li><a href="http://universalSkills.co"><i class="icon-sina-weibo"></i> universalSkills.co</a></li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="copy">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <p>
                            <small class="block">
                                &copy;
                                Copyright &copy;
                                <script>document.write(new Date().getFullYear());</script> All rights reserved | UK: Company # 1261466 | PK: Company # 0150163
                            </small>

                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/Public/js/jquery.min.js"></script>
    <script src="~/Public/js/bootstrap.min.js"></script>
    <script src="~/Public/js/jquery.waypoints.min.js"></script>
    <script src="~/Public/js/jquery.stellar.min.js"></script>
    <script src="~/Public/js/jquery.flexslider-min.js"></script>
    <script src="~/Public/js/owl.carousel.min.js"></script>
    <script src="~/Public/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Public/js/magnific-popup-options.js"></script>
    <script src="~/Public/js/jquery.countTo.js"></script>
    <script src="~/Public/js/main.js"></script>
    <script src="~/Public/js/modernizr-2.6.2.min.js"></script>
    <script src="~/Public/js/jquery-ui.js"></script>

    <script>

        $("#SearchCourse").autocomplete({
        source: '@Url.Action("SearchCourse", "Courses")'
    });
