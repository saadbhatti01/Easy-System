<script>
    $(document).ready(function () {
        GetData();
    });
</script>

<script>
    $("#more").click(function () {
        GetData();
    });
</script>



<script>
 function GetData() {
            var count = $("#Val").val();
             $("#more").html('<i class="fa fa-spinner fa-spin"></i>  Working...');
             $('#more').attr('disabled', true);
            $.ajax(
                {
                    url: "@Url.Action("_BlogData", "Blogs")",
                    data: { Value: count },
                    type: "Get",
                    dataType: "html",
                    async: "true",
                    cache: "false",
                    success: function (data) {
                        //Whatever result you have got from your controller with html partial view replace with a specific html.
                        // HTML DOM replace
                        if (data !== "") {
                            var newC = 9;
                            var newCount = parseInt(newC) + parseInt(count);
                            $("#Val").val(newCount);
                            $("#BlogData").append(data);
                            $("#more").html('Load More');
                            $('#more').attr('disabled', false);
                        } else {
                            $("#more").html('<i class="fa fa-flag-checkered"></i>  No more blogs');
                            $('#more').attr('disabled', true);
                        }
                    },

                    Error: function () {
                        alert("Some error");
                    }
                });
        }
</script>

