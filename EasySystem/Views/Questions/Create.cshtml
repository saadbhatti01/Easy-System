@model EasySystemAPI.Models.Question_Story
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int SrNo = 1;
}

    <div class="main-content">
        <div class="panel-content">
            <div class="main-title-sec">
                <div class="row">
                    <div class="col-md-12 column">
                        <div class="heading-profile">
                            <h2>Create Question</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="main-content-area">
                <div class="row">
                    <div class="col-md-12">
                        <div id="Notifocation">
                            @if (TempData["Info"] != null)
                            {
                                <div role="alert" class="alert alert-info">
                                    <strong><i class="fa fa-info-circle"></i></strong>
                                    @TempData["Info"].
                                </div>
                            }
                            @if (TempData["Success"] != null)
                            {
                                <div role="alert" class="alert alert-success">
                                    <strong><i class="fa fa-thumbs-o-up"></i></strong>
                                    @TempData["Success"].
                                </div>
                            }
                            @if (TempData["Error"] != null)
                            {
                                <div role="alert" class="alert alert-danger">
                                    <strong><i class="fa fa-thumbs-o-down"></i></strong>
                                    @TempData["Error"].
                                </div>
                            }
                            </div>

                            <div class="row">
                                <div class="widget white with-padding">
                                    <form asp-action="Create" method="post">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                     <label>Select Skill Type</label>
                                                    @*@Html.DropDownList("usrCode", (SelectList)ViewData["Codes"], "All", new { @Name = "Code", @class = "form-control" })*@
                                                    <select asp-for="StId" class="form-control" asp-items="(SelectList)@ViewData["Skills"]" required></select>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail2">Question</label>
                                                    <input type="text" class="form-control" asp-for="qQuestion" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail2">Option 1</label>
                                                    <input type="text" class="form-control" asp-for="qOpt1" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail2">Option 2</label>
                                                    <input type="text" class="form-control" asp-for="qOpt2" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail2">Option 3</label>
                                                    <input type="text" class="form-control" asp-for="qOpt3" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail2">Option 4</label>
                                                    <input type="text" class="form-control" asp-for="qOpt4" />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail2">Answer</label>
                                                    @{
                                                        var Ans = new List<SelectListItem>();
                                                        Ans.Add(new SelectListItem { Text = "qOpt1", Value = "qOpt1" });
                                                        Ans.Add(new SelectListItem { Text = "qOpt2", Value = "qOpt2" });
                                                        Ans.Add(new SelectListItem { Text = "qOpt3", Value = "qOpt3" });
                                                        Ans.Add(new SelectListItem { Text = "qOpt4", Value = "qOpt4" });
                                                    }
                                                    <select asp-for="qAnswer" class="form-control" asp-items="@Ans" required></select>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Category</label>
                                                    @{
                                                        var list = new List<SelectListItem>();
                                                        list.Add(new SelectListItem { Text = "1", Value = "1" });
                                                        list.Add(new SelectListItem { Text = "2", Value = "2" });
                                                        list.Add(new SelectListItem { Text = "3", Value = "3" });
                                                        list.Add(new SelectListItem { Text = "4", Value = "4" });
                                                        list.Add(new SelectListItem { Text = "5", Value = "5" });
                                                    }
                                                    <select asp-for="qCategory" class="form-control" asp-items="@list" required></select>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Status</label>
                                                    @{
                                                        var list1 = new List<SelectListItem>();
                                                        list1.Add(new SelectListItem { Text = "Approved", Value = "true" });
                                                        list1.Add(new SelectListItem { Text = "Disapproved", Value = "false" });
                                                    }
                                                    <select asp-for="qStatus" class="form-control" asp-items="@list1" required></select>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-info" style="background-color:#1b3767">Create</button>
                                    </form>
                                </div>
                            </div>
                        </div>

                    @if (TempData["Question"] != null)
                    {
                        <div class="col-md-12">
                            <div class="row">
                                <div class="widget white">
                                    <div class="form-group" hidden>
                                        &nbsp;
                                        <div class="col-md-3">
                                            <input type="text" id="Input" onkeyup="myFunction()" placeholder="Search for.... " class="form-control" title="Type in a name">

                                        </div>
                                    </div>


                                    <table id="List" class="table-striped table-responsive-md footable table" data-page-size="5" data-filter=#filter>
                                        <thead>
                                            <tr>
                                                <th>Sr#</th>
                                                <th>Skill Type</th>
                                                <th>Question</th>
                                                <th>Opt 1</th>
                                                <th>Opt 2</th>
                                                <th>Opt 3</th>
                                                <th>Opt 4</th>
                                                <th>Answer</th>
                                                <th>Category</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                               
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var i in (List<EasySystem.Models.QuestionVM>)TempData["Question"])
                                            {
                                                <tr>
                                                    <td>@SrNo</td>
                                                    <td>@i.StName</td>
                                                    <td>@i.qQuestion</td>
                                                    <td>@i.qOpt1</td>
                                                    <td>@i.qOpt2</td>
                                                    <td>@i.qOpt3</td>
                                                    <td>@i.qOpt4</td>
                                                    <td>@i.qAnswer</td>
                                                    <td>@i.qCategory</td>
                                                    <td>@i.qStatus</td>
                                                    <td>
                                                        <a asp-controller="Questions" asp-action="DeleteQuestion" asp-route-id="@i.qId" title="Delete Record" style="color:red"><i class="fa fa-trash-o"></i></a>
                                                        &nbsp;
                                                        <a asp-controller="Questions" asp-action="EditQuestion" asp-route-id="@i.qId" title="Update Record"><i class="fa fa-edit"></i></a>
                                                    </td>

                                                </tr>
                                                SrNo = SrNo + 1;

                                            }


                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="9">
                                                    <ul class="pagination pull-right"></ul>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Panel Content -->
    </div>